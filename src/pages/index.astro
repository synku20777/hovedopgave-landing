---
import '../styles/global.css';
// Component Imports
import { HeroHeader } from '@/components/header';
import HeroSection from '@/components/sections/hero-section';
import Footer from '@/components/footer';
import Proposition from '@/components/sections/proposition.astro';
import How from '@/components/sections/how.astro';
import CTA from '@/components/sections/renderCTA.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Aurora Landing</title>
	</head>

	<body class="antialiased md:subpixel-antialiased">
		<HeroHeader client:only />
		<main>
			<HeroSection />
			<Proposition />
			<How />
			<CTA />
		</main>
		<Footer />
	</body>
</html>
