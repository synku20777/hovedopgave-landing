---
// Import a feature card component we'll create
import FeatureCard from '../ui/FeatureCard.astro';
import { Image } from 'astro:assets';

// Feature data to avoid repetition
const features = [
  {
    title: "Pro Tools for Every Seller",
    description: "One-click pricing suggestions, performance dashboards, and promo options help side-hustlers look like pros—and grow like them.",
    colSpan: "col-span-2"
  },
  {
    title: "Sustainable by Design",
    description: "Every resale extends a product's life and slashes waste, attracting eco-conscious shoppers eager to buy green.",
  },
  {
    title: "List & Buy in Seconds",
    description: "Intuitive design and smart search make it effortless for anyone — especially Gen Z—to post items or find exactly what they're after.",
  },
  {
    title: "Built-In Trust & Safety",
    description: "Verified profiles, ratings, and escrow-style payments give every transaction the same confidence as buying new.",
    colSpan: "col-span-2"
  },
  {
    title: "Onboarding in Under 2 Minutes",
    description: "Sign up, list an item, get instant support — no friction, just marketplace momentum.",
    colSpan: "col-span-2"
  }
];
---

<section id="how" class="px-6 min-h-svh py-20 flex flex-col justify-between xl:items-center xl:mx-auto xl:container">
  <div class="flex flex-col justify-between">
    <h2 class="text-4xl font-bold lg:text-5xl xl:text-7xl">How?</h2>
    
    <div class="mt-12 flex flex-col gap-8 sm:grid lg:grid-cols-6 lg:grid-rows-4 lg:gap-4">
      <!-- Infographic image -->
      <div class="col-span-4 row-span-4 items-center justify-center flex">
        <Image 
        format="avif"
        src={`${import.meta.env.BASE_URL}/infographic.jpg`} 
        alt="A horizontal infographic illustrating the end-to-end transaction process for sellers and buyers, broken down into steps with icons and brief descriptions. For Sellers: Ship – Icon of a shipping box. Text: “Instant labels and Baltic-wide coverage with pickup points get your item moving.”  Track – Icon of a tracking path. Text: “Real-time updates keep everyone in the loop from pickup to doorstep.” Relax – Icon of a balanced scale. Text: “Once it’s on the way, our team handles support and any issues—start to finish.” Cash out – Icon of a dollar sign. Text: “Funds hit your account the moment delivery is confirmed by our systems.” For Buyers: One-click buy – Icon of a clicking hand. Text: “Secure escrow checkout locks in your deal in seconds.”Track – Shared step with sellers. Relax – Shared step with sellers. Rip & drip – Icon of a package being opened. Text: “Parcel lands, you tear it open, flex the find, drop a rating—done.” All steps are connected by arrows showing a linear process from transaction initiation to completion, emphasizing ease, security, and automation."
        width={1195}
        height={400}
        />

      </div>
      <!-- Features grid -->
      <div class="w-full grid grid-cols-2 auto-rows-min gap-x-[1rem] gap-y-[40px] h-fit sm:col-span-2 sm:row-span-4">
        {features.map(feature => (
          <FeatureCard
            title={feature.title}
            description={feature.description}
            colSpan={feature.colSpan}
          />
        ))}
      </div>
    </div>
  </div>
</section>